---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Feel the shadow, wear the emotion" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <main>
      <div
        class="w-[90vw] container m-auto flex flex-wrap lg:w-[80vw] xl:w-[70vw] 2xl:w-[60vw]"
      >
        <Header />

        <slot />
      </div>
    </main>
  </body>
</html>

<style is:global>
  :root {
    --vichy-size: 100px;
  }
  html {
    font-family: Arial, Helvetica, sans-serif;

    margin-left: calc(100vw - 100%);
    --s: 50px;
    --c: #191b22;
    --_s: calc(2 * var(--s)) calc(2 * var(--s));
    --_g: 35.36% 35.36% at;
    --_c: #0000 66%, #20222a 68% 70%, #0000 72%;
    background-image: linear-gradient(
        rgba(255, 71, 71, 0.48) 25%,
        transparent 25%,
        transparent 75%,
        rgba(255, 71, 71, 0.48) 75%
      ),
      linear-gradient(
        to right,
        rgba(255, 71, 71, 0.48) 25%,
        transparent 25%,
        transparent 75%,
        rgba(255, 71, 71, 0.48) 75%
      );
    background-size: var(--vichy-size) var(--vichy-size);
    background-position: center;
    background-color: #fdf9f4;
  }
</style>
